{
  "dashboard": {
    "id": null,
    "uid": "hpoprm-basic",
    "title": "HPOPRM - API Metrics",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "panels": [
      {
        "type": "stat",
        "title": "HTTP Requests/sec",
        "gridPos": {"x":0, "y":0, "w":8, "h":6},
        "targets": [
          { "expr": "rate(http_requests_total[5m])", "legendFormat": "{{method}} {{status}}" }
        ]
      },
      {
        "type": "graph",
        "title": "Request Duration (p95)",
        "gridPos": {"x":8, "y":0, "w":16, "h":6},
        "targets": [
          { "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p95" }
        ]
      },
      {
        "type": "stat",
        "title": "Queue Jobs Processed",
        "gridPos": {"x":0, "y":6, "w":8, "h":6},
        "targets": [
          { "expr": "increase(bullmq_jobs_processed_total[1h])", "legendFormat": "processed" }
        ]
      }
    ],
    "templating": { "list": [] },
    "time": { "from": "now-6h", "to": "now" }
  }
}
